<template>
  <qas-single-view
    v-model:fields="fields"
    v-model:result="result"
    entity="<%= props.name %>"
  >
    <template #header>
      <qas-page-header
        :breadcrumbs="breadcrumbs"
        title="__MUDAR__NOME__"
      >
        <qas-actions-menu
          v-bind="actionsMenuProps"
        />
      </qas-page-header>
    </template>
    <template #default>
      <qas-box>
        <qas-grid-generator
          :fields="fields"
          :result="result"
          :use-empty-result="false"
        />
      </qas-box>
    </template>
  </qas-single-view>
</template>

<script>
export default {
  name: '<%= props.singleName %>',

  data () {
    return {
      fields: {},
      result: {}
    }
  },

  computed: {
    breadcrumbs () {
      return [
        { label: 'Lista de __MUDAR__NOME__', routeName: '<%= props.listName %>' },
        { label: '__MUDAR__NOME__' }
      ]
    },

    actionsMenuProps () {
      return {
        <%_ if(props.result.form === 'Todos' || props.result.form === 'Editar'){ _%>
        list: {
          edit: {
            label: 'Editar __MUDAR__NOME__',
            icon: 'o_create',
            props: {
              to: {
                name: '<%= props.editName %>',
                params: { id: this.result.uuid }
              }
            }
          }
        },
        <%_ } _%>
        deleteLabel: 'Excluir __MUDAR__NOME__',
        deleteProps: {
          entity: 'inputs',
          customId: this.result.uuid,
          onSuccess: () => this.$router.replace({ name: '<%= props.listName %>' })
        }
      }
    }
  }
}
</script>
